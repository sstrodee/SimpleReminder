<Window x:Class="SimpleReminder.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Напоминание"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="10" 
            Background="White"
            BorderBrush="#FFE0E0E0"
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Фиксированный заголовок -->
            <Border Grid.Row="0"
                    Background="#009688"
                    CornerRadius="10,10,0,0"
                    Padding="15,10">
                <TextBlock Text="Напоминание"
                          Foreground="White"
                          FontSize="16"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>

            <!-- Сообщение с заголовком -->
            <ScrollViewer Grid.Row="1" Padding="15">
                <StackPanel>
                    <TextBlock x:Name="CustomTitleTextBlock"
                             TextWrapping="Wrap"
                             Foreground="#FF4285F4"
                             FontSize="14"
                             FontWeight="Bold"
                             Margin="0,0,0,5"
                             Visibility="Collapsed"/>
                    <TextBlock x:Name="MessageTextBlock"
                             TextWrapping="Wrap"
                             Foreground="#FF333333"
                             FontSize="14"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопка -->
            <Border Grid.Row="2"
                    CornerRadius="0,0,10,10"
                    Background="#FFF5F5F5"
                    Padding="10">
                <Button Content="Закрыть"
                        Click="OnCloseButtonClick"
                        HorizontalAlignment="Center"
                        Width="120"
                        Height="35"
                        Background="#009688"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand"/>
            </Border>
        </Grid>
    </Border>
</Window>